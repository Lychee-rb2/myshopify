{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:css": "pnpm generate:css --minify",
    "build:remix": "remix build",
    "generate:css": "tailwindcss -o ./app/styles/tailwind.css",
    "dev": "remix build && run-p \"dev:*\"",
    "dev:css": "pnpm generate:css --watch",
    "dev:node": "cross-env NODE_ENV=development nodemon -r tsconfig-paths/register -r dotenv/config server.express.ts --watch server.express.ts",
    "dev:remix": "remix watch",
    "start": "cross-env NODE_ENV=production node server.express.ts",
    "typecheck": "tsc -b",
    "codegen": "run-p \"codegen:*\"",
    "codegen:shopify": "graphql-codegen-esm --config app/shopify/codegen.yml && eslint app/shopify/generated.ts --fix",
    "lint": "eslint ./app",
    "codegen:contentful": "graphql-codegen-esm --config app/contentful/codegen.yml && eslint app/contentful/generated.ts --fix"
  },
  "dependencies": {
    "@remix-run/express": "^1.9.0",
    "@remix-run/node": "^1.9.0",
    "@remix-run/react": "^1.9.0",
    "@remix-run/vercel": "^1.9.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/line-clamp": "^0.4.2",
    "classnames": "^2.3.2",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "express": "^4.18.2",
    "graphql-request": "^5.1.0",
    "graphql-tag": "^2.12.6",
    "isbot": "^3.6.5",
    "morgan": "^1.10.0",
    "msw": "^0.49.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.2.4"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^3.2.3",
    "@graphql-codegen/cli": "^2.16.1",
    "@graphql-codegen/typescript": "^2.8.5",
    "@graphql-codegen/typescript-graphql-request": "^4.5.8",
    "@graphql-codegen/typescript-msw": "^1.1.6",
    "@graphql-codegen/typescript-operations": "^2.5.10",
    "@remix-run/dev": "^1.9.0",
    "@remix-run/eslint-config": "^1.9.0",
    "@remix-run/server-runtime": "^1.9.0",
    "@types/express": "^4.17.15",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "dotenv": "^16.0.3",
    "eslint": "^8.27.0",
    "express-serve-static-core": "^0.1.1",
    "graphql": "^16.6.0",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": ">=14"
  }
}
